{
  "name": "mango",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "version": "lerna version prerelease --preid alpha --no-private --no-push --no-git-tag-version --no-commit-hooks",
    "prepublishOnly": "node tools/build.js",
    "publish": "lerna publish from-package --no-push --no-git-tag-version",
    "publish:create": "lerna publish from-package --no-push --no-git-tag-version --include-private @mango-js/create"
  },
  "devDependencies": {
    "esbuild": "^0.18.10",
    "lerna": "^7.1.0",
    "nx": "^16.4.0",
    "terser": "^5.18.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
